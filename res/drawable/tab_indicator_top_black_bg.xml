<?xml version="1.0" encoding="utf-8"?>
<selector
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_selected="true">
        <layer-list>
            <item>
                <shape>
                    <stroke android:width="2.0dip" android:color="#ff1fb3fe" />
                </shape>
            </item>
            <item android:bottom="2.0dip">
                <shape>
                    <solid android:color="#ff1e2024" />
                </shape>
            </item>
        </layer-list>
    </item>
    <item android:state_pressed="true">
        <layer-list>
            <item>
                <shape>
                    <stroke android:width="2.0dip" android:color="#ff3e6ac5" />
                </shape>
            </item>
            <item android:bottom="2.0dip">
                <shape>
                    <solid android:color="#ffffffff" />
                </shape>
            </item>
        </layer-list>
    </item>
    <item android:state_focused="true">
        <layer-list>
            <item>
                <shape>
                    <stroke android:width="2.0dip" android:color="#ff3e6ac5" />
                </shape>
            </item>
            <item android:bottom="2.0dip">
                <shape>
                    <solid android:color="#ffffffff" />
                </shape>
            </item>
        </layer-list>
    </item>
    <item>
        <shape android:shape="rectangle" />
    </item>
</selector>