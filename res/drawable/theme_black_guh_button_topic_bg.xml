<?xml version="1.0" encoding="utf-8"?>
<selector
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/theme_black_tab_menu_select" />
            <stroke android:width="1.0dip" android:color="@color/theme_black_tab_menu_select" />
            <corners android:radius="5.0dip" />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/theme_black_tab_menu_select" />
            <stroke android:width="1.0dip" android:color="@color/theme_black_tab_menu_select" />
            <corners android:radius="5.0dip" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@android:color/transparent" />
            <stroke android:width="1.0dip" android:color="@color/theme_black_tab_menu_nor" />
            <corners android:radius="5.0dip" />
        </shape>
    </item>
</selector>